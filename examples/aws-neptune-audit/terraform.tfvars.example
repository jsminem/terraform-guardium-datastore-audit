# AWS Neptune with IBM Guardium Data Protection - Terraform Variables

#----------------------------------------
# General Configuration
#----------------------------------------
aws_region = "us-east-1"
tags = {
  Environment = "Demo"
  Owner       = "Security"
  Project     = "Guardium-Terraform"
}

#----------------------------------------
# Neptune Configuration
#----------------------------------------
neptune_cluster_identifier = "your-neptune-cluster"

#----------------------------------------
# Universal Connector Configuration
#----------------------------------------
enable_universal_connector = true
udc_aws_credential = "guardium-aws"  # Name of the AWS credential stored in Guardium Central Manager

# CSV Configuration
csv_start_position = "end"
csv_interval = "5"
csv_event_filter = ""

#----------------------------------------
# Guardium Connection Details
#----------------------------------------
gdp_server             = "guardium.example.com"  # Replace with your Guardium server
gdp_port               = "8443"
gdp_username           = "admin"                 # Replace with your Guardium username
gdp_password           = "password"              # Replace with your Guardium password
gdp_client_id          = "client4"               # Replace with your client ID
gdp_client_secret      = "client-secret"         # Replace with your client secret
gdp_ssh_username       = "root"                  # Replace with your SSH username
gdp_ssh_privatekeypath = "~/.ssh/id_rsa"         # Replace with your SSH private key path
gdp_mu_host            = ""                      # Comma separated list of Guardium Managed Units

#----------------------------------------
# SFTP and Multipart Upload Configuration
#----------------------------------------
# Optional: Uncomment to customize SFTP upload directory (default: /upload)
# profile_upload_directory = "/upload"

# Optional: Uncomment to customize Guardium API directory (default: /var/IBM/Guardium/file-server/upload)
# profile_api_directory = "/var/IBM/Guardium/file-server/upload"

# Optional: Enable multipart upload for large CSV files (default: false)
# use_multipart_upload = false